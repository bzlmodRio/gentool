        strip_prefix = "rules_wpiformat-{{ mandetory_dependencies.rules_wpiformat.version }}",
        url = "https://github.com/bzlmodRio/rules_wpiformat/archive/refs/tags/{{ mandetory_dependencies.rules_wpiformat.version }}.tar.gz",
    )
{%- endif %}

