        sha256 = "{{ mandetory_dependencies.rules_checkstyle.sha }}",
        strip_prefix = "rules_checkstyle-{{ mandetory_dependencies.rules_checkstyle.version }}",
        url = "https://github.com/bzlmodRio/rules_checkstyle/archive/refs/tags/{{ mandetory_dependencies.rules_checkstyle.version }}.tar.gz",
    )
{%- endif %}
