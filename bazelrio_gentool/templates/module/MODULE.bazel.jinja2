module(
    name = "{{group.repo_name}}",
    compatibility_level = {{group.year}},
    version = "{{group.version}}",
)

bazel_dep(name = "platforms", version = "0.0.4")
bazel_dep(name = "rules_java", version = "5.1.0")
{%- if group.get_all_maven_dependencies() %}
bazel_dep(name = "rules_jvm_external", version = "4.4.2")
{%- endif %}

bazel_dep(name = "bzlmodrio-gentool", version = "{{mandetory_dependencies.bzlmodrio_gentool.version}}")
bazel_dep(name = "rules_bazelrio", version = "{{mandetory_dependencies.rules_bazelrio.version}}")
bazel_dep(name = "rules_roborio_toolchain", version = "{{mandetory_dependencies.rules_roborio_toolchain.version}}")
{% for name, module_dep in group.module_dependencies.items() %}
bazel_dep(name = "{{name}}", version = "{{module_dep.container.version}}")
{%- endfor %}
{%- if group.get_all_maven_dependencies() %}
maven = use_extension("@rules_jvm_external//:extensions.bzl", "maven")

maven.install(
    artifacts = [
        {%- for maven_dep in group.get_all_maven_dependencies() %}
        "{{maven_dep[0]}}:{{maven_dep[1]}}",
        {%- endfor %}
    ],
    repositories = [
        "https://repo1.maven.org/maven2",
        "https://frcmaven.wpi.edu/release",
        {%- for extra_maven_repos in group.extra_maven_repos %}
        "{{extra_maven_repos}}",
        {%- endfor %}
    ],
)

use_repo(
    maven,
    "maven",
)

{%- endif %}
setup_{{group.sanitized_repo_name}}_cpp_dependencies = use_extension("//:maven_cpp_deps.bzl", "setup_{{group.sanitized_repo_name}}_cpp_dependencies")

use_repo(
    setup_{{group.sanitized_repo_name}}_cpp_dependencies,
    
    
{%- for cpp_dep in group.cc_deps %}
    {%- if cpp_dep.headers %}
    "{{cpp_dep.get_archive_name('headers')}}",
    {%- endif %}
    {%- if cpp_dep.sources %}
    "{{cpp_dep.get_archive_name('sources')}}",
    {%- endif %}

    {%- for resource in cpp_dep.resources %}
    {%- if cpp_dep.get_sha256(resource) %}
    "{{cpp_dep.get_archive_name(resource)}}",
    {%- endif %}
    {%- endfor %}
{%- endfor %}

    
    {%- for tool_dep in group.java_native_tools %}
    {%- for resource in tool_dep.resources %}
    "{{tool_dep.get_archive_name(resource)}}",
    {%- endfor %}
    {%- endfor %}

    {%- for tool_dep in group.executable_tools %}
    {%- for resource in tool_dep.resources %}
    "{{tool_dep.get_archive_name(resource)}}",
    {%- endfor %}
    {%- endfor %}
)

