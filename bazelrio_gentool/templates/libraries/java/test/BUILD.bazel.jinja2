load("@rules_bazelrio//:java_rules.bzl", "bazelrio_java_binary", "bazelrio_java_test")
load("//styleguide:java_styleguide.bzl", "java_styleguide")

bazelrio_java_binary(
    name = "main",
    srcs = ["Main.java"],
    jvm_flags = [
        "-Djava.library.path=.",
    ],
    main_class = "bazelrio_test.Main",
    deps = [
        "@{{group.repo_name}}//libraries/java/{{target.parent_folder}}",
    ],
)

bazelrio_java_test(
    name = "test",
    srcs = ["BasicTest.java"],
    args = [
        "--select-package",
        "bazelrio_test",
    ],
    env = {
        "PATH": ".",
        "LD_LIBRARY_PATH": ".",
    },  # TODO fishy
    jvm_flags = [
        "-Djava.library.path=.",
    ],
    main_class = "org.junit.platform.console.ConsoleLauncher",
    tags = [
        "bazelrio-java-test",
        "no-sandbox",  # TODO Fishy
    ],
    runtime_deps = [
        "@maven//:org_junit_platform_junit_platform_commons",
        "@maven//:org_junit_platform_junit_platform_console",
        "@maven//:org_junit_platform_junit_platform_engine",
        "@maven//:org_junit_platform_junit_platform_launcher",
        "@maven//:org_junit_platform_junit_platform_suite_api",
    ],
    deps = [
        "@{{group.repo_name}}//libraries/java/{{target.parent_folder}}",
        "@maven//:org_junit_jupiter_junit_jupiter_api",
        "@maven//:org_junit_jupiter_junit_jupiter_engine",
        "@maven//:org_junit_jupiter_junit_jupiter_params",
    ],
)

pmd(
    name = "pmd_analysis",
    srcs = glob(["*.java"]),
    rulesets = ["//styleguide:pmd_rules"],
    tags = ["java-styleguide"],
)

checkstyle(
    name = "checkstyle_analysis",
    srcs = glob(["*.java"]),
    config_file = "//styleguide:checkstyle",
    tags = ["java-styleguide"],
)


spotless(
    name = "spotless",
    srcs = glob(["*.java"]),
    tags = ["java-styleguide", "no-sandbox"],
)
