{%- raw -%}
name: Auto Update
on:
  workflow_dispatch:
  schedule:
    # Check everyday at 20:00 UTC
    - cron:  '0 20 * * *'

concurrency:
  group: ${{ github.workflow }}-${{ github.head_ref || github.ref }}
  cancel-in-progress: true

jobs:
  auto_update_module:
    name: "Auto Update Module"
    runs-on: ubuntu-latest
    steps:
    - name: Set up Go 1.20.x
      uses: actions/setup-go@v4
      with:
        go-version: 1.20.x
      id: go

    - uses: actions/checkout@v3

    - name: Install Buildifier
      run: |
        cd $(mktemp -d)
        GO111MODULE=on go install github.com/bazelbuild/buildtools/buildifier@latest

    # Checkout repository
    - uses: actions/checkout@v3
      with:
{%- endraw %}
        path: {{"rules" if "rules" in repo else "libraries"}}/{{group.repo_name}}
{% raw %}
    # Checkout gentool
    - uses: actions/checkout@v3
      with:
        repository: 'bzlmodRio/gentool.git'
        fetch-depth: 0
        path: gentool
        ref: refactor_dev


{%- endraw %}
{% if group.module_dependencies %}
{% for name, module_dep in group.module_dependencies.items() %}
    # Checkout {{name}}
    - uses: actions/checkout@v3
      with:
        repository: 'bzlmodRio/{{name}}.git'
        fetch-depth: 0
        path: {{"rules" if "rules" in repo else "libraries"}}/{{group.repo_name}}/{{module_dep.local_rel_folder}}
        ref: main
{% endfor %}
{%- endif %}
{% raw %}

    - name: Setup Cache
      uses: actions/cache@v3
      with:
        path: |
          ~/bzlmod_cache/*.sha256
        key: ${{ runner.os }}-${{ hashFiles('**/generate/**') }}
        restore-keys: |
          ${{ runner.os }}-
          ${{ runner.os }}

    # Run update
    - name: Run update
      run: bazel run //:auto_update
{%- endraw %}
      working-directory: {{"rules" if "rules" in repo else "libraries"}}/{{group.repo_name}}/generate
{%- raw %}

    - name: Generate if changed
      run: |
        if [[ $(git --no-pager diff --exit-code HEAD) != '' ]]; then
          echo "Something changed, need to re-generate"
          bazel run //:generate
          buildifier -warnings all --lint=fix -r ..
          cd ..
          bazel build //... --nobuild --enable_bzlmod --lockfile_mode=update
          cd tests
          bazel build //... --nobuild --enable_bzlmod --lockfile_mode=update
        else
          echo "No changes!"
        fi;
{%- endraw %}
      working-directory: {{"rules" if "rules" in repo else "libraries"}}/{{group.repo_name}}/generate
{%- raw %}

    - name: Store new version
      run: echo "NEW_VERSION=$(bazel run //:get_version)" >> $GITHUB_ENV
      working-directory: {% endraw %}{{"rules" if "rules" in repo else "libraries"}}/{{group.repo_name}}/generate{% raw %}

    # Create pull requests
    - name: Create Pull Request
      uses: peter-evans/create-pull-request@v4
      env:
        GITHUB_TOKEN: ${{ secrets.AUTO_UPDATE_KEY }}
      with:
{%- endraw %}
        path: {{"rules" if "rules" in repo else "libraries"}}/{{group.repo_name}}
{%- raw %}
        base: main
        token: ${{ secrets.AUTO_UPDATE_KEY }}
        reviewers: pjreiniger
        branch: autoupdate_${{ env.NEW_VERSION }}
        title: "Auto Update to '${{ env.NEW_VERSION }}'"
{%- endraw %}

