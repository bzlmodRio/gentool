cc_library(
    name = "{{target.parent_folder}}",
    linkstatic = 1,
    {%- if target.has_incompatible_targets() %}
    target_compatible_with = select({
        "@rules_roborio_toolchain//constraints/is_roborio:roborio": ["@platforms//:incompatible"],
        "//conditions:default": [],
    }),
    {%- endif %}
    visibility = ["//visibility:public"],
    deps = [
      {%- for dep in target.dependencies %}
        "@{{dep.repo_name}}//dependencies/cpp/{{dep.parent_folder}}",
      {%- endfor %}
    ] + {% if target.headers %}["@{{target.get_header_archive_name()}}//:headers"] + {% endif %}select({
{{target.get_shared_library_select()}}
    }),
)
{% if target.has_jni %}
cc_library(
    name = "jni",
    visibility = ["//visibility:public"],
    deps = [
        ":{{target.parent_folder}}",
    ] + select({
{{target.get_jni_shared_library_select()}}
    }),
)
{% endif %}