+package(default_visibility = ["//visibility:public"])
+
+static_srcs = glob(["**/*.lib", "**/*.a"], exclude=["**/*jni.lib"])
+shared_srcs = glob(["**/*.dll", "**/*.so*", "**/*.dylib"], exclude=["**/*jni.dll", "**/*jni.so", "**/*.so.debug", "**/libopencv_java*.dylib"])
