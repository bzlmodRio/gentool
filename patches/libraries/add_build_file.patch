+
+cc_library(
+    name = "static_libs",
+    srcs = static_srcs,
+    visibility = ["//visibility:public"],
+)
+
+cc_library(
+    name = "shared_libs",
+    srcs = shared_srcs,
+    visibility = ["//visibility:public"],
+    deps = [
+        ":static_libs",
+    ]
+)
+
+cc_library(
+    name = "shared_jni_libs",
+    srcs = shared_jni_srcs,
+    visibility = ["//visibility:public"],
+)